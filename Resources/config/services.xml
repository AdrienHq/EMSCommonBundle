<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="EMS\CommonBundle\DataCollector\ElasticsearchDataCollector">
            <tag name="data_collector"
                 template="@EMSCommon/DataCollector/template.html.twig"
                 id="elasticsearch" />
        </service>

        <service id="EMS\CommonBundle\DataCollector\ElasticsearchProcessor">
            <argument type="service" id="EMS\CommonBundle\DataCollector\ElasticsearchDataCollector" />
        </service>
        <service id="ems_common.logger" parent="monolog.logger_prototype" public="false">
            <argument index="0">ems</argument>
            <call method="useMicrosecondTimestamps">
                <argument>%monolog.use_microseconds%</argument>
            </call>
            <call method="pushProcessor">
                <argument type="collection">
                    <argument type="service" id="EMS\CommonBundle\DataCollector\ElasticsearchProcessor" />
                    <argument>processRecord</argument>
                </argument>
            </call>
        </service>

        <!-- use this factory services, it will set the tracer to common.ems.logger -->
        <service id="EMS\CommonBundle\Elasticsearch\Factory">
            <argument type="service" id="ems_common.logger" />
        </service>

        <prototype namespace="EMS\CommonBundle\EventSubscriber\" resource="../../EventSubscriber/*">
            <tag name="kernel.event_subscriber" />
        </prototype>
    </services>
</container>